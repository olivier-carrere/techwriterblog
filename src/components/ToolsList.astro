---
import data from "../data/oil-types.yaml"; // your YAML file
const rows = data.properties.rows;
---

<h3>{data.title}</h3>
<p>{data.shortdesc}</p>

<ul>
  {rows.map(row => (
    <li>
      <strong>{row.type}</strong>
      <ul>
        <li>Brand: {row.value}</li>
        <li>Usage: {row.usage}</li>
        <li>Viscosity grade: {row.viscosity_grade}</li>
      </ul>
    </li>
  ))}
</ul>
