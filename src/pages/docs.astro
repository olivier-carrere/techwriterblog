---
import { resolve } from 'path';
import { fileURLToPath } from 'url';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>API Documentation</title>
    <link
      rel="stylesheet"
      href="/swagger-ui/swagger-ui.css"
    />
    <style>
      body {
        margin: 0;
        padding: 0;
      }
      #swagger-ui {
        width: 100%;
        height: 100vh;
      }
    </style>
  </head>
  <body>
    <div id="swagger-ui"></div>

    <!-- Load Swagger UI scripts without bundling -->
    <script src="/swagger-ui/swagger-ui-bundle.js" is:inline></script>
    <script src="/swagger-ui/swagger-ui-standalone-preset.js" is:inline></script>

    <script is:inline>
      window.onload = () => {
        SwaggerUIBundle({
          url: '/api/oil-types/schema', // points to your dynamic OpenAPI JSON
          dom_id: '#swagger-ui',
          presets: [
            SwaggerUIBundle.presets.apis,
            SwaggerUIStandalonePreset
          ],
          layout: 'StandaloneLayout'
        });
      };
    </script>
  </body>
</html>
